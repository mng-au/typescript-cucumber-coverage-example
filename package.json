{
  "name": "typescript-cucumber-coverage-example",
  "author": "Matthew Ng",
  "description": "Simple typescript BBD testing with cucumber-js and istanbul",
  "license": "MIT",
  "repository": {

  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/cucumber": "^4.0.4",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "nyc": "^13.1.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "scripts": {
    "coverage": "nyc cucumber-js",
    "test": "cucumber-js"
  }
}
